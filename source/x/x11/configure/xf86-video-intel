CFLAGS=$SLKCFLAGS \
CXXFLAGS=$SLKCFLAGS \
./autogen.sh \
  --prefix=/usr \
  --libdir=/usr/lib${LIBDIRSUFFIX} \
  --sysconfdir=/etc \
  --localstatedir=/var \
  --infodir=/usr/info \
  --mandir=/usr/man \
  --docdir=/usr/doc/${PKGNAME}-${MODULAR_PACKAGE_VERSION} \
  --disable-static \
  --enable-kms-only \
  --enable-uxa \
  --build=$ARCH-slackware-linux
