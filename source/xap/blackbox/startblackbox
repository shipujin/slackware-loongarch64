#!/bin/sh
#  startblackbox v1.0

########################################################################
##  Start DBUS session bus                                            ##
########################################################################


if [ -z "$DBUS_SESSION_BUS_ADDRESS" ]; then
   eval `dbus-launch --sh-syntax --exit-with-session`
fi


########################################################################
##  Start blackbox Window Manager                                     ##
########################################################################


exec /usr/bin/blackbox


########################################################################

