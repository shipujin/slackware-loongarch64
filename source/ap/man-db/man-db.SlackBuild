cd $(dirname $0) ; CWD=$(pwd)

PKGNAM=man-db
VERSION=${VERSION:-$(echo $PKGNAM-*.tar.xz | rev | cut -f 3- -d . | cut -f 1 -d - | rev)}
BUILD=${BUILD:-1}

MAN2HTML=${MAN2HTML:-20180101}

# 20180115 rworkman:
# Include Thomas Dickey's man2html script

