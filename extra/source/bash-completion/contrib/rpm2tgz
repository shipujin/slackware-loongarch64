# Slackware rpm2tgz completion.

have rpm2tgz &&
_rpm2tgz()
{
    COMPREPLY=()
    local cur="${COMP_WORDS[COMP_CWORD]}"
    if [[ "$cur" == -* ]]; then
        COMPREPLY=( $( compgen -W '-s -S -n -r -d -c' -- "$cur" ) )
        return 0
    fi

    COMPREPLY=( $(compgen -f -X "!*.rpm" -- "$cur") )
} && complete -F _rpm2tgz -o plusdirs rpm2tgz rpm2txz rpm2targz
