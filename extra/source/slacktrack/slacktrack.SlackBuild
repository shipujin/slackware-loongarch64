#!/bin/sh
# Set initial variables:
CWD=`pwd`
if [ "$TMP" = "" ]; then
  TMP=/tmp
fi

export VERSION=2.06
export ARCH=${ARCH:-x86_64}
export PKGEXT=${PKGEXT:-txz}

if [ ! -d $TMP ]; then
  mkdir -p $TMP # location to build the source
fi
cd $TMP
rm -rf slacktrack
tar xvf $CWD/slacktrack-$VERSION-source.tar.gz
cd slacktrack

# Start the "real" SlackBuild:
./slacktrack.SlackBuild
